{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++20 build active file",
            "command": "/usr/local/bin/g++",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/gcc20-${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "detail": "compiler: /usr/local/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++17 build active file",
            "command": "/usr/local/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/gcc17-${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "llvm clang++20 build active file",
            "command": "/usr/bin/clang++",
            "args": [
              "-std=c++20",
              "-stdlib=libc++",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/clang20-${fileBasenameNoExtension}"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
              "$gcc"
            ],
            "group": "build",
          }
          ///////////////////////////////
          ,{
            "label": "Open Terminal",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
          }
    ]
}